<?xml version="1.0" encoding="UTF-8"?>
<!-- http://phpunit.de/manual/4.1/en/appendixes.configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd" backupGlobals="false" colors="true">
  <coverage>
    <include>
      <directory>src/*Bundle/Entity</directory>
      <directory>src/*/*Bundle/Entity</directory>
    </include>
    <report>
      <clover outputFile="app/CodeCoverage.xml"/>
      <html outputDirectory="app/CodeCoverage/"/>
    </report>
  </coverage>
  <testsuites>
    <testsuite name="Test Suite">
      <directory>src/*/*Bundle/Tests</directory>
      <directory>../src/*/Bundle/*Bundle/Tests</directory>
    </testsuite>
  </testsuites>
  <logging/>
</phpunit>
